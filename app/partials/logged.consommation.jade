md-data-table-container
  table(md-data-table md-progress="deferred")
    thead(md-order="query.order" md-trigger="onOrderChange")
      tr
        th(name="Date")
        th(name="Consommation")
        th(numeric name="Nombre")
        th(numeric name="Total" unit="â‚¬")
    tbody
      tr(md-auto-select ng-repeat="consommation in consommations track by $index")
        td {{consommation.date | amDateFormat:'DD/MM/YYYY HH:mm:ss'}}
        td {{consommation.consommable}}
        td {{consommation.quantity}}
        td(show-unit) {{consommation.montant}}

md-data-table-pagination(md-label="label" md-row-select="['10', '25', '50']" md-limit="query.limit" md-page="query.page" md-total="{{total}}" md-trigger="onPaginationChange")
