md-content(layout="column", layout-fill, layout-align="center center")
  md-card
    md-toolbar
      h2.md-toolbar-tools
        span Connexion
    form(name="loginForm", ng-submit="onFormSubmit()", novalidate="")
      md-input-container
        label Login
        input(ng-model="login", required, maxlength="15", name="login")
      md-input-container
        label Mot de passe
        input(ng-model="password", type="password", required, maxlength="255", name="password")
      div(layout="row")
        md-button.md-raised.md-primary(type="submit", ng-disabled="loginForm.$invalid", flex) Connexion
