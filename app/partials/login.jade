md-content.prime(layout="column", layout-fill, layout-align="center center")
  div
    md-card.nopadding(layout-padding)
      form(name="loginForm", ng-submit="onFormSubmit()", novalidate="")
        md-input-container
          label Login
          input(ng-model="login", maxlength="15", name="login", required)
        md-input-container
          label Mot de passe
          input(ng-model="password", type="password", maxlength="255", name="password", required)
        md-input-container
          md-select(placeholder="Lieu", ng-model="lieu", required)
            md-option(ng-repeat="lieu in lieux", value="{{lieu.value}}") {{lieu.name}}
        div(layout="row")
          md-button.md-raised.md-primary(type="submit", ng-disabled="loginForm.$invalid", flex) Connexion

    div(layout="row")
      md-button.md-raised.md-primary(flex) Anonyme
